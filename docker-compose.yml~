#version: '3'

elasticsearch:
  image: elasticsearch:latest
  command: elasticsearch -Des.network.host=0.0.0.0
  ports:
   - "9200:9200"
   - "9300:9300"

web:
  build: app/Docker/.
  ports:
   - "8080:8080"
  links:
   - elasticsearch:elasticsearch
  volumes:
   - ./app/api:/var/www/example.com/api



